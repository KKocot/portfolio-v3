---
import type { Translations } from '../i18n';

interface Props {
  t: Translations;
  name: string;
}

const { t, name } = Astro.props;
---

<section id="hero" class="min-h-screen flex items-center pt-[72px] relative">
  <div class="max-w-[1200px] mx-auto px-6 w-full py-16 lg:py-24">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Portrait/Visual - Left side on desktop -->
      <div class="order-1 flex justify-center lg:justify-start animate-fade-up">
        <div class="relative">
          <!-- Portrait placeholder with gradient -->
          <div class="w-72 h-[360px] sm:w-80 sm:h-[400px] lg:w-[380px] lg:h-[480px] rounded-2xl overflow-hidden relative">
            <div class="absolute inset-0 bg-gradient-to-br from-[#ff8833] via-[#ff6600] to-[#cc5500]"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-7xl sm:text-8xl lg:text-9xl font-bold text-black/20">KK</span>
            </div>
            <!-- Decorative elements -->
            <div class="absolute top-4 right-4 w-3 h-3 bg-white/30 rounded-full"></div>
            <div class="absolute bottom-8 left-8 w-2 h-2 bg-white/20 rounded-full"></div>
          </div>
          <!-- Floating badge -->
          <div class="absolute -bottom-4 right-0 sm:-right-4 bg-black border border-white/10 rounded-full px-3 sm:px-4 py-2 flex items-center gap-2">
            <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
            <span class="text-[11px] sm:text-xs text-white/70">Available for work</span>
          </div>
        </div>
      </div>

      <!-- Content - Right side on desktop -->
      <div class="order-2 lg:text-left text-center lg:pl-8">
        <span class="section-tag animate-fade-up">
          {t.hero.role}
        </span>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight tracking-tight mb-6 animate-fade-up animation-delay-100">
          {t.hero.tagline}<br />
          <span class="gradient-text">{name}</span>
        </h1>

        <p class="text-base lg:text-lg mb-8 animate-fade-up animation-delay-200 max-w-lg lg:max-w-none mx-auto lg:mx-0" style="color: rgba(250, 250, 250, 0.6);">
          {t.hero.description}
        </p>

        <div class="flex flex-wrap gap-4 justify-center lg:justify-start animate-fade-up animation-delay-300">
          <a href="#contact" class="btn btn-primary">
            {t.hero.cta.contact}
          </a>
          <a href="#projects" class="btn btn-secondary">
            {t.hero.cta.projects}
          </a>
        </div>

      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2">
    <span class="text-xs uppercase tracking-widest" style="color: rgba(250, 250, 250, 0.4);">{t.hero.scroll}</span>
    <div class="w-px h-10 scroll-line" style="background: linear-gradient(to bottom, rgba(250, 250, 250, 0.4), transparent);"></div>
  </div>
</section>

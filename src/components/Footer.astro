---
import type { Translations } from '../i18n';

interface Props {
  t: Translations;
}

const { t } = Astro.props;

const name = 'Krzysztof Kocot';

const socialLinks = [
  { name: 'GitHub', href: 'https://github.com/KKocot' },
  { name: 'LinkedIn', href: 'https://www.linkedin.com/in/krzysztof-kocot-b3043a220/' },
];

const website = 'bard-dev.com';
---

<footer class="py-8" style="background: #000; border-top: 1px solid rgba(250, 250, 250, 0.05);">
  <div class="max-w-[1200px] mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Logo -->
      <span class="text-xl font-bold text-white">
        KK<span style="color: var(--color-primary);">.</span>
      </span>

      <!-- Copyright -->
      <p class="text-sm" style="color: rgba(250, 250, 250, 0.4);">
        Â© {new Date().getFullYear()} {name}. {t.footer.rights}
      </p>

      <!-- Links -->
      <div class="flex gap-6">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm transition-colors hover:text-white"
            style="color: rgba(250, 250, 250, 0.4);"
          >
            {link.name}
          </a>
        ))}
        <a
          href={`https://${website}`}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm transition-colors hover:text-white"
          style="color: rgba(250, 250, 250, 0.4);"
        >
          {website}
        </a>
      </div>
    </div>
  </div>
</footer>

---
import type { Translations } from '../i18n';

interface Props {
  t: Translations;
}

const { t } = Astro.props;

const projects = [
  {
    title: 'Denser',
    description: t.projects.descriptions.denser,
    tags: ['Next.js', 'TypeScript', 'Blockchain', 'Playwright', 'Docker'],
    gradient: 'from-emerald-500 to-teal-600',
    link: 'https://github.com/openhive-network/denser',
    featured: true,
  },
  {
    title: 'ConqSite',
    description: t.projects.descriptions.conqsite,
    tags: ['Next.js', 'MongoDB', 'Discord API', 'NextAuth'],
    gradient: 'from-orange-500 to-red-600',
    link: 'https://conqsite.bard-dev.com',
    featured: true,
  },
  {
    title: 'Shopping List',
    description: t.projects.descriptions.shoppingList,
    tags: ['React Native', 'Expo', 'Mobile', 'Bun'],
    gradient: 'from-pink-500 to-rose-600',
    link: 'https://github.com/KKocot/shopping-list',
  },
  {
    title: 'Stasiak Opał',
    description: t.projects.descriptions.stasiakOpal,
    tags: ['Astro', 'Tailwind', 'SEO'],
    gradient: 'from-cyan-500 to-blue-600',
    link: 'https://stasiak-opal.pl',
  },
  {
    title: 'Flashcards',
    description: t.projects.descriptions.flashcards,
    tags: ['React', 'TypeScript', 'Education'],
    gradient: 'from-violet-500 to-purple-600',
    link: 'https://github.com/KKocot/flashcards',
  },
];
---

<section id="projects" class="py-24 lg:py-32" style="background: rgba(250, 250, 250, 0.02);">
  <div class="max-w-[1200px] mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="section-tag">{t.projects.tag}</span>
      <h2 class="section-title">{t.projects.title}</h2>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 gap-6">
      {projects.map((project, index) => (
        <article
          class={`project-card animate-on-scroll ${project.featured ? 'md:col-span-2 md:grid md:grid-cols-2' : ''}`}
          style={`transition-delay: ${index * 100}ms`}
        >
          <!-- Image -->
          <div class={`aspect-video ${project.featured ? 'md:aspect-auto md:min-h-[320px]' : ''} overflow-hidden`}>
            <div
              class={`project-image-inner w-full h-full bg-gradient-to-br ${project.gradient} flex items-center justify-center`}
            >
              <span class="text-2xl lg:text-3xl font-bold text-white/90">{project.title}</span>
            </div>
          </div>

          <!-- Content -->
          <div class="p-6 lg:p-8">
            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map((tag) => (
                <span class="text-xs font-medium px-3 py-1 rounded-full" style="color: rgba(250, 250, 250, 0.6); background: rgba(250, 250, 250, 0.05); border: 1px solid rgba(250, 250, 250, 0.1);">
                  {tag}
                </span>
              ))}
            </div>

            <h3 class="text-xl font-semibold text-white mb-3">{project.title}</h3>
            <p class="text-sm mb-6" style="color: rgba(250, 250, 250, 0.6);">{project.description}</p>

            <a
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-sm font-medium hover:gap-3 transition-all duration-200"
              style="color: var(--color-primary);"
            >
              {t.projects.viewProject}
              <span>→</span>
            </a>
          </div>
        </article>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a
        href="https://github.com/KKocot"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-outline"
      >
        {t.projects.viewAll}
      </a>
    </div>
  </div>
</section>
